extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Upload de um ficheiro
            .w3-container
                form.w3-container(action='/' method='POST' enctype='multipart/form-data' id='post-form')
                    label.w3-teal
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file' name='ficheiro' id='ficheiro')
                    label.w3-teal
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey(type='text' name='desc' id='desc')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            header.w3-container.w3-teal(id='header2')
                h3 Catálogo de ficheiros
            .w3-container(id='container2')
                table.w3-table-all(id='file-table')
                    tr
                        th Ficheiro
                        th Descrição
                        th Última modificação
                    each file in lista
                        tr
                            td
                                a(href= '/' + file.nome)= file.nome
                            td= file.desc
                            td= new Date(file.date).toDateString()
            footer.w3-container.w3-teal
                address Gerado por FormApp