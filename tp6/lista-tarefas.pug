extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Data de registo
                        th Prazo
                        th Descrição
                        th Importância
                        th Tipo
                        th Estado
                        th 
                    each ta in lista
                        if !ta.apagado && ta.ongoing
                            tr
                                td= ta.reg
                                td= ta.prazo
                                td= ta.desc
                                td= ta.imp
                                td= ta.tipo
                                td= 'A decorrer'
                                td
                                    table
                                        tr
                                            form.w3-container(action='/termina' method='POST')
                                                input.w3-input(type='hidden' name='reg' value=ta.reg)
                                                input.w3-btn.w3-light-green(type='submit' value='Terminar')
                                            form.w3-container(action='/apaga' method='POST')
                                                input.w3-input(type='hidden' name='reg' value=ta.reg)
                                                input.w3-btn.w3-red(type='submit' value='Apagar')
                    each ta in lista
                        if !ta.ongoing && !ta.apagado
                            tr.w3-pale-green
                                td= ta.reg
                                td= ta.prazo
                                td= ta.desc
                                td= ta.imp
                                td= ta.tipo
                                td= 'Terminada'
                                td
                                    table
                                        tr
                                            form.w3-container(action='/apga' method='POST')
                                                input.w3-input(type='hidden' name='reg' value=ta.reg)
                                                input.w3-btn.w3-red(type='submit' value='Apagar')
                    each ta in lista
                        if ta.apagado
                            tr.w3-dark-grey
                                td= ta.reg
                                td= ta.prazo
                                td= ta.desc
                                td= ta.imp
                                td= ta.tipo
                                td= 'Apagada'
                                td= ''
            footer.w3-container.w3-teal
                address Gerado por FormApp: 
                    a(href='/') Voltar à página principal