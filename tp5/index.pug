extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h1 Arquivo de Obras Musicais
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Compositor
                        th Obras Musicais
                    each comp in ind
                        tr
                            td= comp.compositor
                            td
                                ul
                                    each o in comp.obras
                                        li
                                            a(href='http://localhost:5000/obras/' + o._id)= o.titulo
            footer.w3-container.w3-light-grey